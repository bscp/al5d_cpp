{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "scripts/build.sh -m rebuild -t Debug",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true  // sets ${defaultBuildTask}
            }
        },
        {
            "label": "Specific build",
            "type": "shell",
            "command": "scripts/build.sh -m ${input:build_method} -t ${input:build_type}",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "scripts/test.sh",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true  // sets ${defaultTestTask}
            }
        },
        {
            "label": "Install",
            "type": "shell",
            "command": "scripts/install.sh",
            "options": {
                "cwd": "${workspaceRoot}"
            },
        }
    ],
    "inputs": [
        {
            "id": "build_type",
            "description": "Build type [release|debug]",
            "default": "Debug",
            "type": "promptString"
        },
        {
            "id": "build_method",
            "description": "Build method [rebuild|clean]",
            "default": "Rebuild",
            "type": "promptString"
        }
    ]
}
